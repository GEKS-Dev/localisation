extends ./base.pug
block content
    section.row.geks-register-msg
        if errors
            each err in errors
                .alert.alert-danger
                    span.glyphicon.glyphicon-exclamation-sign
                    span  #{err}
    section.row
        form.form-horizontal.geks-login-form(action='/login' method='POST')
            .form-group
                label.col-sm-2.control-label(for='geks-input-email') Имя пользователя
                .col-sm-10
                    input#geks-input-email.form-control(type='text', name='username' placeholder='Введите имя пользователя')
            .form-group
                label.col-sm-2.control-label(for='geks-input-password') Пароль
                .col-sm-10
                    input#geks-input-password.form-control(type='password', name='password' placeholder='Введите пароль')
            .form-group
                .col-sm-offset-2.col-sm-10
                    button.btn.btn-default(type='submit') Войти

